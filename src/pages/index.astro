---
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Socials from "@/components/Socials.astro";
import TimeZone from "@/components/TimeZone.astro";
import Info from "@/components/Info.astro";
import Projects from "@/components/Projects.astro";

import { ModeToggle } from "@/components/ModeToggle";

import {
	Card,
	CardContent,
	CardDescription,
	CardFooter,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
---

<Layout title="Tahir Murata">
	<main
		class="gap-2 sm:gap-2 md:gap-3 lg:gap-4 grid md:grid-cols-3 lg:grid-cols-4 md:grid-rows-9 lg:grid-rows-8 m-auto p-2 sm:p-4 md:p-6 w-full max-w-6xl lg:h-screen lg:max-h-[800px] overflow-hidden"
	>
		<Card
			className="relative md:col-span-3 lg:col-span-3 md:row-span-2 lg:row-span-4 overflow-hidden"
		>
			<div
				class="absolute inset-0 bg-cover bg-center blur lg:blur-none"
				style={{ backgroundImage: "url(/banner.jpg)" }}
			>
			</div>
			<CardHeader className="relative z-10">
				<CardDescription
					className="font-thin text-muted-foreground dark"
				>
					welcome
				</CardDescription>
				<CardTitle className="font-extralight text-foreground dark">
					<h1>
						Hi, I'm
						<span class="font-semibold">Tahir Murata</span>, a
						backend software developer based in Japan.
					</h1>
				</CardTitle>
			</CardHeader>
		</Card>
		<AboutMe />
		<Socials />
		<Projects />
		<Card
			className="md:col-start-3 lg:col-start-3 md:row-span-3 lg:row-span-3 md:row-start-6 lg:row-start-6"
		>
			Blog
		</Card>
		<TimeZone />
		<ModeToggle client:load />
		<Info />
	</main>
</Layout>
