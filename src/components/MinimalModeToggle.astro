---
import { Moon, Sun } from "lucide-react";
import { Button } from "./ui/button";
---

<Button
    data-theme-toggle
    className="flex-shrink-0 sm:hover:bg-accent hover:bg-background"
    variant="outline"
    size="icon"
>
    <Sun
        className="absolute dark:opacity-0 transition-all duration-200 rotate-90 dark:rotate-0"
        fill="currentColor"
    />
    <Moon
        className="absolute opacity-0 dark:opacity-100 transition-all duration-200 rotate-90 dark:rotate-0"
    />
</Button>
