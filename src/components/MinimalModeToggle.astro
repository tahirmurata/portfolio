---
import { Moon, Sun } from "lucide-react";
import { Button } from "./ui/button";
---

<Button data-theme-toggle variant="outline" size="icon">
    <div class="relative flex size-4">
        <Sun
            className="absolute inset-0 dark:opacity-0 transition-all duration-200 !size-4 rotate-90 dark:rotate-0"
            fill="currentColor"
        />
        <Moon
            className="absolute inset-0 opacity-0 dark:opacity-100 transition-all duration-200 rotate-90 dark:rotate-0 !size-4"
        />
    </div>
</Button>
